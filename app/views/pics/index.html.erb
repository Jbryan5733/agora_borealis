
<h1>Artist's Gallery</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Medium</th>
      <th>user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pics.each do |pic| %>
      <tr>
        <td><%= image_tag pic.image.url(:medium) %></td>
        <td><%= pic.description %></td>
        <td><%= pic.medium %></td>
        <td><%= pic.user.email  if pic.user %></td>
        <td><%= link_to 'Show', pic %></td>
        <% if pic.user == current_user %>
        <td><%= link_to 'Edit', edit_pic_path(pic) %></td>
        <td><%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Pic', new_pic_path %>
<% end %>
