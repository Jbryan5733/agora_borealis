<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>

 
 <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %> 

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true %> 

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true %>
 

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Please select what user type you are." %><br />
    
    <%= f.collection_select :role_id, Role.order(:name), :id, :name, include_blank: true %>
    
  </div>

  <div class="field">
    <%= f.label "Would you like to receive our newsletter?"%>
    <%= f.check_box :newsletter %><br />
     
  </div>
    
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
